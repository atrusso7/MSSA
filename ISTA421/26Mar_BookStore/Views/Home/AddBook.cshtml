ViewData["Title"] = "AddBook";
}

<h1>AddBook</h1>

<h4>Book</h4>
<hr />
<div class="row">
<div class="col-md-4">
<form asp-action="AddBook">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
<label asp-for="Title" class="control-label"></label>
